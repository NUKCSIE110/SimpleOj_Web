<table class="table">
    <thead>
        <th style="width:1%;"><i class="fa fa-trophy" aria-hidden="true"></i></th>
        <th class="col-md-2 text-center">User</th>
        <% for i in 1..@problems %>
            <th class="text-center">#<%= i %></th>
        <%end%>
        <th class="col-md-1">Score</th>
    </thead>
    <tbody>
        <% @users.each_with_index do |user, i| %>
            <%= tag(:tr, :class=> user['sid']==@current_user.sid ? "bg-info" : '') %>
                <td><%= i+1 %></td>
                <td class="text-center">
                    <%= user['sid'].upcase%>
                </td>
                <% user['ac'].each do |ac| %>
                    <% if ac==1 %>
                        <td class="bg-success text-center"><strong>AC</strong></td>
                    <%else%>
                        <td class="text-center"><strong>--</strong></td>
                    <%end%>
                <%end%>
                <td>
                    <%= user['score'] %>
                </td>
            </tr>
        <%end%>
    </tbody>
</table>
