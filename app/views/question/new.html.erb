<%= form_with scope: :question, url: question_index_path, local: true do |form| %>
    <div class="row">
        <div class="form-group col-md-2">
            <%= form.label(:qid, "題號" )%><br>
            <%= form.collection_select(:qid, Problem.all, :id, :id, {:prompt=>true,:selected=>@qid}, {:class => 'form-control'} ) %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label(:text, "問題描述") %><br>
        <%= form.text_area(:text, rows:15, class:"form-control") %>
    </div>

    <div class="form-group">
        <%= form.submit("Submit", class:"btn btn-primary") %>
    </p>
<% end %>

