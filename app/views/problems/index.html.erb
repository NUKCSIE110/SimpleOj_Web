<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-center">題目</th>
            <th scope="col">最新狀態</th>
        </tr>
    </thead>
    <tbody>
         <% @problems.each_with_index do |problem, index| %>
            <% if @status[index] == "AC"  %>
                <tr class="bg-success">
            <%else%>
                <tr>
            <%end%>
                <td><%= index+1 %></td>
                <td>
                    <a href="<%= problem_path(problem) %>">
                        <%= problem.title %>
                    </a>
                </td>
                 <td class="col-md-3">
                     <strong>
                    <% if @status[index] == "AC"  %>
                        <p class="text-success">AC</p>
                    <% elsif @status[index].nil? %>
                        --
                    <% else %>
                        <%= @status[index]%>
                    <% end %>
                    </strong>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
